<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Patients</title>
    <style>
        table {
            width: 100%;
            border-collapse: collapse;
        }
        th, td {
            border: 1px solid #ddd;
            padding: 8px;
        }
        th {
            background-color: #f4f4f4;
            text-align: left;
        }
        a {
            margin-right: 10px;
        }
        .add-btn {
            display: inline-block;
            margin: 20px 0;
            padding: 10px 20px;
            background-color: #4CAF50;
            color: white;
            text-decoration: none;
            border-radius: 4px;
        }
    </style>
</head>
<body>
    <h1>Patient Management</h1>

    <!-- Button to Add a New Patient -->
    <a href="/patients/add" class="add-btn">Add New Patient</a>

    <!-- Patients Table -->
    <table>
        <thead>
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Age</th>
                <th>Diagnosis</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            <% if (patients.length > 0) { %>
                <% patients.forEach(patient => { %>
                    <tr>
                        <td><%= patient.id %></td>
                        <td><%= patient.name %></td>
                        <td><%= patient.age %></td>
                        <td><%= patient.diagnosis %></td>
                        <td>
                            <!-- Edit Patient -->
                            <a href="/patients/edit/<%= patient.id %>">Edit</a>
                            
                            <!-- Delete Patient -->
                            <a href="/patients/delete/<%= patient.id %>" onclick="return confirm('Are you sure you want to delete this patient?')">Delete</a>
                        </td>
                    </tr>
                <% }) %>
            <% } else { %>
                <tr>
                    <td colspan="5" style="text-align: center;">No patients found</td>
                </tr>
            <% } %>
        </tbody>
    </table>
</body>
</html>
